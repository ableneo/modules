{
  "name": "@ableneo/tools",
  "private": true,
  "author": "Marcel Moko≈° <https://github.com/marcelmokos>",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ableneo/tools.git"
  },
  "bugs": {
    "url": "https://github.com/ableneo/tools/issues"
  },
  "homepage": "https://ableneo.github.com/tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "commit",
    "test": "lerna run test",
    "test:changed": "lerna run test:changed",
    "test:watch": "react-scripts test",
    "test:update": "lerna run test:update",
    "test:coverage": "lerna run test:coverage",
    "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "lint:img": "find src -iname '*.gif' -o -iname '*.jpg' -o -iname '*.png' -o -iname '*.jpeg' -o -iname '*.svg' | xargs imagemin-lint-staged",
    "lint:staged": "eslint --fix --max-warnings=0",
    "new-version": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-package",
    "env:setup": "node ./scripts/envSetup",
    "preinstall": "yarn run env:setup",
    "diff": "lerna diff",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "predeploy": "yarn run docz:build",
    "deploy": "gh-pages -d docs",
    "build": "lerna run build",
    "watch": "yarn run build -w",
    "prettier": "prettier --write *.{js,jsx,html,md,mdx,yaml,json,css,scss,less}",
    "generate:package": "hygen package with-prompt"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/prompt-cli": "^7.5.0",
    "@commitlint/travis-cli": "^7.5.2",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.10",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "awesome-typescript-loader": "^5.2.1",
    "docz": "^1.0.0-rc.7",
    "docz-theme-default": "^1.0.0-rc.7",
    "eslint": "5.12.0",
    "eslint-config-ableneo": "file:packages/eslint-config-ableneo/",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "hygen": "^4.0.2",
    "imagemin-lint-staged": "^0.4.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-scripts": "^2.1.8",
    "source-map-loader": "^0.2.4",
    "typescript": "3.3.x",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "optionalDependencies": {
    "react": "^16.8.x",
    "react-dom": "^16.8.x"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,ts,tsx}": [
        "yarn run lint:staged",
        "git add"
      ],
      "*.{html,md,mdx,yaml,json,css,scss,less}": [
        "prettier --write",
        "git add"
      ],
      "*.{png,jpeg,jpg,gif,svg}": [
        "imagemin-lint-staged",
        "git add"
      ],
      "yarn.lock": [
        "git rm --cached"
      ]
    }
  },
  "husky": {
    "pre-commit": "lint-staged && yarn test:changed",
    "pre-push": "yarn test:coverage",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
